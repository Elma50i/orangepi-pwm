        "Value": 100
      },
      {
        "Temperature": 40,
        "Value": 300
      },
      {
        "Temperature": 50,
        "Value": 400
      },
      {
        "Temperature": 60,
        "Value": 500
      },
      {
        "Temperature": 70,
        "Value": 800
      },
      {
        "Temperature": 80,
        "Value": 1000
      }
    ]
  }
